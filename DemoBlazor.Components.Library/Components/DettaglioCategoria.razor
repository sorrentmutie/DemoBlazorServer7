<h3>@Category?.Name</h3>
@if(Category != null)
{
    <EditForm Model="Category" OnValidSubmit="() => CategoryChanged.InvokeAsync(Category)">
        <div class="form-group">
            <label for="nome">Nome</label>
            <InputText id="nome" @bind-Value="Category.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="descrizione">Descrizione</label>
            <InputText id="descrizione" @bind-Value="Category.Description" class="form-control" />
        </div>

        <div style="margin-top:15px">
            <button type="submit" class="btn btn-info">OK</button>
            <button type="button" @onclick="() => CategoryChanged.InvokeAsync(null)" class="btn btn-danger">Annulla </button>
        </div>
    </EditForm>
}


@code {
    [Parameter] 
    public CategoryDTO? Category { get; set; } 

    [Parameter]
    public EventCallback<CategoryDTO> CategoryChanged { get; set; } 
}
