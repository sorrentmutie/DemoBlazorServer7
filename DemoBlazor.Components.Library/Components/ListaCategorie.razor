

@if(Categories != null)
{
    @foreach (var category in Categories)
    {
       <CardCategoria Category="category" OnCategorySelected="CategorySelected"></CardCategoria>
    }
}

@code {
    [Parameter] public List<CategoryDTO>? Categories { get; set; }
    [Parameter] public EventCallback<CategoryDTO> OnCategorySelected { get; set; }
    
    private void CategorySelected(CategoryDTO category)
    {
        OnCategorySelected.InvokeAsync(category);
    }
}
